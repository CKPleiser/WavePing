{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/health",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "cron": [
    {
      "name": "Scrape Wave Sessions",
      "schedule": "0 */2 * * *",
      "command": "curl -X POST https://waveping-production.up.railway.app/api/cron/scrape -H 'Authorization: Bearer $CRON_SECRET'"
    }
  ]
}